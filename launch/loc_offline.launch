<?xml version="1.0"?>
<launch>
    <!-- Arguments -->
    <arg name="config" default="$(find lightning)/config/default.yaml" />
    <arg name="input_bag" default="" />
    <arg name="map_path" default="./data/new_map/" />
    
    <!-- Lightning Localization Offline Node -->
    <node name="lightning_loc_offline" pkg="lightning" type="run_loc_offline" output="screen">
        <param name="config" value="$(arg config)" />
        <param name="input_bag" value="$(arg input_bag)" />
        <param name="map_path" value="$(arg map_path)" />
    </node>

</launch>
